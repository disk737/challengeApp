<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ChallengeApp.Views.ListChallengeView"
             Padding="10,20,10,0">

    <StackLayout>

        <Label x:Name="LabelPoints" HorizontalOptions="End"/>

        <ListView x:Name="ListChallenge" ItemSelected="ListChallenge_ItemSelected">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout Orientation="Horizontal">
                            <Label Text="{Binding ChallengeName}" FontSize="Large" HorizontalOptions="StartAndExpand"/>
                            <Label Text="{Binding ChallengePoint}" FontSize="Large"/>
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackLayout>
    
    
    
</ContentPage>