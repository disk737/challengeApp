<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ChallengeApp.Views.ListChallengeView"
             Title="List of Challenge"
             Padding="10,0,10,0">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!--<StackLayout Grid.Row="0" Orientation="Horizontal" BackgroundColor="Silver">
            <Label x:Name="LabelPoints" HorizontalOptions="EndAndExpand"/>    
        </StackLayout>-->
        
        <ListView Grid.Row="1" x:Name="ListChallenge" ItemSelected="ListChallenge_ItemSelected">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout Orientation="Horizontal">
                            <Label Text="{Binding ChallengeName}" FontSize="Large" HorizontalOptions="StartAndExpand"/>
                            <Label Text="{Binding ChallengePoint}" FontSize="Large"/>
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
    
</ContentPage>